# ============================================================
# Indicium FAI Challenge - Environment Configuration
# ============================================================
# Copy this file to .env and fill in your values.
# Lines starting with # are comments.
# ============================================================

# === LLM Provider Configuration ===
# Choose your LLM provider: 'vertexai', 'google_genai', or 'openai'
# - vertexai: Uses Google Cloud Vertex AI (requires GCP project)
# - google_genai: Uses Google AI Studio API (requires API key)
# - openai: Uses OpenAI API (requires API key)
LLM_PROVIDER=google_genai

# Model name to use (depends on your provider)
# For google_genai/vertexai: gemini-2.0-flash, gemini-1.5-pro, gemini-1.5-flash
# For openai: gpt-4o, gpt-4o-mini, gpt-3.5-turbo
LLM_MODEL_NAME=gemini-2.0-flash

# Temperature for LLM responses (0.0 = deterministic, 1.0+ = creative)
LLM_TEMPERATURE=0

# Maximum retries for LLM API calls
LLM_MAX_RETRIES=3


# === Google Cloud / Vertex AI Configuration ===
# Required if LLM_PROVIDER=vertexai

# GCP Project ID
# GOOGLE_CLOUD_PROJECT=your-project-id

# GCP Region for Vertex AI
GOOGLE_CLOUD_LOCATION=us-central1

# Optional: Path to service account JSON (uses ADC if not set)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json


# === Google AI Studio Configuration ===
# Required if LLM_PROVIDER=google_genai
# Get your API key at: https://aistudio.google.com/app/apikey

GOOGLE_API_KEY=your-google-api-key-here


# === OpenAI Configuration ===
# Required if LLM_PROVIDER=openai

# OPENAI_API_KEY=sk-your-openai-api-key
# OPENAI_BASE_URL=  # Optional: for Azure OpenAI or custom endpoints


# === LangSmith / LangChain Tracing ===
# Enable for observability and debugging
# Get API key at: https://smith.langchain.com/

LANGCHAIN_TRACING_V2=false
# LANGCHAIN_API_KEY=lsv2_your-langsmith-api-key
LANGCHAIN_PROJECT=indicium-fai-challenge
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com


# === Application Settings ===

# Directory for data files (raw and refined datasets)
DATA_DIR=data

# Directory for output files (HTML reports)
OUTPUT_DIR=output

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO


# === News/Search Settings ===

# Default topic for news search
DEFAULT_TOPIC=SRAG

# Region code for DuckDuckGo search (br-pt = Brazil/Portuguese)
NEWS_REGION=br-pt

# Maximum news articles to fetch
MAX_NEWS_RESULTS=5


# === Rate Limiting ===

# Maximum API calls per minute (prevents throttling)
API_CALLS_PER_MINUTE=30
